{
  "name": "ts-bookmarklet",
  "version": "1.0.0",
  "description": "TypeScript compiler for bookmarklet",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc --build src/tsconfig.json",
    "prepare": "npm run build",
    "test": "jest"
  },
  "keywords": [],
  "author": {
    "name": "YEBISUYA Sugoroku",
    "email": "yebisuya@gmail.com",
    "url": "https://qiita.com/sugoroku_y"
  },
  "license": "MIT",
  "dependencies": {
    "optionalist": "^1.0.3",
    "typescript": "^4.0.3",
    "uglify-es": "^3.3.9"
  },
  "devDependencies": {
    "@types/node": "^14.11.5",
    "@types/uglify-es": "^3.0.0",
    "jest": "^26.5.2",
    "ts-jest": "^26.4.1"
  },
  "jest": {
    "testMatch": [
      "**/*.test.ts"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "src/tsconfig.json"
      }
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/src/*.ts",
      "!**/src/main.ts"
    ]
  }
}
